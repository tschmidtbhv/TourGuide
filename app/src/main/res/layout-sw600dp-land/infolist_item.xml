<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/card_item"
        android:layout_height="@dimen/card_item"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/infoimage"
            android:layout_width="@dimen/image_item"
            android:layout_height="@dimen/image_item"
            android:layout_gravity="center"
            android:contentDescription="@string/image_content"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/imagetitle"
        android:layout_width="@dimen/reset"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_item"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin_item"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin_item"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />


</android.support.constraint.ConstraintLayout>
